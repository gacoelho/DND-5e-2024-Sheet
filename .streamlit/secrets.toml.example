# Exemplo de arquivo de configuração para Streamlit Cloud
# Copie este arquivo para .streamlit/secrets.toml e configure conforme necessário

[general]
app_name = "D&D 5e Character Creator"
version = "1.0.0"
description = "Sistema completo para criação de fichas de personagem D&D 5e"

[deployment]
platform = "streamlit_cloud"
auto_deploy = true

[features]
dark_mode = true
multilingual = true
pdf_export = true
character_save = true

# Configurações opcionais para produção
[production]
debug = false
log_level = "info"
max_upload_size = "200MB"

# Configurações de banco de dados (se necessário no futuro)
[database]
# type = "sqlite"
# path = "characters.db"